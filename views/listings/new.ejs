<%- layout("/layouts/boilerplate") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="listing-card">
                <div class="text-center mb-4">
                    <h2 class="listing-title">Create New Listing</h2>
                    <p class="listing-subtitle">Share your property with potential tenants</p>
                </div>

                <form method="POST" action="/listings" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="form-group mb-4">
                        <label for="title" class="form-label">Title</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-heading"></i></span>
                            <input name="listing[title]" placeholder="Enter an attractive title" type="text" id="title"
                                class="form-control" required>
                        </div>
                        <div class="invalid-feedback">Please enter a title for your listing</div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="description" class="form-label">Description</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                            <textarea name="listing[description]" placeholder="Describe your property in detail" id="description"
                                class="form-control" rows="5" required></textarea>
                        </div>
                        <div class="invalid-feedback">Please provide a detailed description</div>
                        <small class="text-muted">Include key features, amenities, and rules</small>
                    </div>

                    <div class="form-group mb-4">
                        <label for="image" class="form-label">Property Images</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-image"></i></span>
                            <input name="listing[image]" type="file" class="form-control" id="image" accept="image/*" />
                        </div>
                        <small class="text-muted">Upload clear, high-quality images (Max size: 5MB)</small>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="price" class="form-label">Price (per month)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                                    <input name="listing[price]" placeholder="Enter monthly rent" id="price" 
                                        class="form-control" required type="number" min="0">
                                </div>
                                <div class="invalid-feedback">Please enter a valid price</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="location" class="form-label">Location</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                    <input name="listing[location]" placeholder="Property location" type="text" 
                                        id="location" class="form-control" required>
                                </div>
                                <div class="invalid-feedback">Please enter a valid location</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="contactNumber" class="form-label">Contact Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            <input name="listing[contactNumber]" placeholder="Enter 10-digit phone number" type="tel" 
                                id="contactNumber" class="form-control" required pattern="[0-9]{10}"
                                title="Please enter a valid 10-digit phone number">
                        </div>
                        <div class="invalid-feedback">Please enter a valid 10-digit phone number</div>
                        <small class="text-muted">This number will be visible only to logged-in users</small>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Create Listing
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
.listing-card {
    background: #ffffff;
    padding: 2.5rem;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    margin: 2rem 0;
}

.listing-title {
    color: #2d2d2d;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.listing-subtitle {
    color: #666;
    font-size: 0.95rem;
}

.form-label {
    color: #2d2d2d;
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.input-group {
    border-radius: 8px;
    overflow: hidden;
}

.input-group-text {
    background-color: #f8f9fa;
    border: 1px solid #ced4da;
    border-right: none;
    color: #ff3333;
    min-width: 45px;
    justify-content: center;
}

.form-control {
    border: 1px solid #ced4da;
    padding: 0.6rem 1rem;
    font-size: 0.95rem;
}

.form-control:focus {
    border-color: #ff3333;
    box-shadow: 0 0 0 0.2rem rgba(255,51,51,0.15);
}

textarea.form-control {
    min-height: 120px;
}

.btn-primary {
    background: linear-gradient(135deg, #ff3333 0%, #ff4d4d 100%);
    border: none;
    padding: 0.8rem 2rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #ff4d4d 0%, #ff6666 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255,51,51,0.2);
}

.text-muted {
    font-size: 0.85rem;
    margin-top: 0.5rem;
}

/* Custom file input styling */
input[type="file"].form-control {
    padding: 0.375rem 0.75rem;
}

input[type="file"].form-control::-webkit-file-upload-button {
    background: #f8f9fa;
    border: 1px solid #ced4da;
    border-radius: 4px;
    color: #666;
    padding: 0.375rem 0.75rem;
    margin-right: 0.75rem;
    transition: all 0.2s ease;
}

input[type="file"].form-control::-webkit-file-upload-button:hover {
    background: #e9ecef;
    color: #ff3333;
}

/* Number input styling */
input[type="number"].form-control::-webkit-inner-spin-button,
input[type="number"].form-control::-webkit-outer-spin-button {
    opacity: 1;
    background: #f8f9fa;
}

@media (max-width: 768px) {
    .listing-card {
        padding: 1.5rem;
        margin: 1rem 0;
    }

    .btn-primary {
        width: 100%;
        padding: 0.8rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Preview image before upload
    const imageInput = document.querySelector('#image');
    imageInput.addEventListener('change', function() {
        const file = this.files[0];
        if (file) {
            if (file.size > 5 * 1024 * 1024) { // 5MB
                alert('File size should not exceed 5MB');
                this.value = '';
                return;
            }
            
            if (!file.type.startsWith('image/')) {
                alert('Please upload an image file');
                this.value = '';
                return;
            }
        }
    });

    // Format price with commas
    const priceInput = document.querySelector('#price');
    priceInput.addEventListener('input', function() {
        if (this.value < 0) {
            this.value = 0;
        }
    });
});
</script>
